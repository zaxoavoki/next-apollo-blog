generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  content      String?
  createdAt    DateTime  @db.Date
  images       String[]
  isDraft      Boolean   @default(false)
  previewImage String?
  title        String
  updatedAt    DateTime  @db.Date
  userId       String    @db.ObjectId
  user         User      @relation(fields: [userId], references: [id])
  comments     Comment[]
  likes        String[]  @default([]) @db.ObjectId

  @@unique(fields: [id, userId], name: "idUserId")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  avatar      String?   @default("https://static.vecteezy.com/system/resources/previews/002/318/271/original/user-profile-icon-free-vector.jpg")
  createdAt   DateTime  @db.Date
  displayName String?
  inactive    Boolean   @default(false)
  updatedAt   DateTime  @db.Date
  uid         String    @unique
  role        Role      @default(USER)
  posts       Post[]
  comments    Comment[]
  likedPosts  String[]  @default([]) @db.ObjectId
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  updatedAt DateTime @db.Date
  text      String
  postId    String   @db.ObjectId
  userId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique(fields: [id, userId], name: "idUserId")
}

enum Role {
  USER
  ADMIN
}
